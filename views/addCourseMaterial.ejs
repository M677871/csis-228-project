<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= typeof title !== 'undefined' ? title : 'Add Course Material â€” LearnOnline' %></title>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
        rel="stylesheet"
        crossorigin="anonymous"
    />
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
        rel="stylesheet"
    />
    <style>
        :root {
            --primary-color: #2563eb;
            --secondary-color: #4f46e5;
            --accent-color: #7c3aed;
        }

        body {
            background-color: #f8fafc;
            min-height: 100vh;
            font-family: "Segoe UI", system-ui, sans-serif;
        }

        .card {
            border-radius: 1.25rem;
            border: none;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: auto;
            background: linear-gradient(145deg, #ffffff, #f8fafc);
        }

        .form-control, .form-select {
            border-radius: 0.75rem;
            padding: 1rem 1.5rem;
            border: 2px solid #e2e8f0;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

        .auth-btn {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border: none;
            border-radius: 0.75rem;
            padding: 1rem 2rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            letter-spacing: 0.5px;
            font-weight: 500;
            color: white;
        }

        .auth-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(37, 99, 235, 0.2);
        }

        .alert {
            border-radius: 0.75rem;
            border: none;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        }

        h2 {
            color: var(--primary-color);
            font-weight: 700;
        }
        p.text-secondary {
            color: #64748b !important;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <div class="d-flex align-items-center justify-content-center py-5 px-3">
        <div class="card bg-white p-4 w-100">
            <div class="text-center mb-4">
                <h2 class="mb-1">ðŸ“š Add Material to "<%= course.courseName %>"</h2>
                <p class="text-secondary">Upload videos, documents, or links for your course</p>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    <i class="bi bi-exclamation-octagon me-2"></i>
                    <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    <i class="bi bi-check-circle me-2"></i>
                    <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <form action="/instructor/courses/<%= course.courseId %>/materials" method="POST">
                <input type="hidden" name="courseId" value="<%= course.courseId %>" />

                <div class="mb-3">
                    <label for="title" class="form-label">Material Title</label>
                    <input
                        type="text"
                        name="title"
                        class="form-control"
                        id="title"
                        placeholder="e.g., Introduction to HTML, Chapter 1 Notes"
                        required
                    />
                </div>

                <div class="mb-3">
                    <label for="materialType" class="form-label">Material Type</label>
                    <select name="materialType" id="materialType" class="form-select" required>
                        <option value="">Select Material Type</option>
                        <% if (typeof materialTypes !== 'undefined' && materialTypes.length > 0) { %>
                            <% materialTypes.forEach(type => { %>
                                <option value="<%= type %>"><%= type.charAt(0).toUpperCase() + type.slice(1) %></option>
                            <% }); %>
                        <% } else { %>
                            <option value="video">Video</option>
                            <option value="document">Document</option>
                            <option value="link">Link</option>
                            <option value="pdf">PDF</option>
                            <option value="image">Image</option>
                        <% } %>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="filePath" class="form-label">File Path / URL</label>
                    <input
                        type="text"
                        name="filePath"
                        class="form-control"
                        id="filePath"
                        placeholder="e.g., /uploads/my-video.mp4 or https://youtube.com/watch?v=xyz"
                        required
                    />
                </div>

                <button type="submit" class="btn auth-btn w-100">
                    <i class="bi bi-plus-circle me-2"></i>
                    Add Material
                </button>
            </form>
        </div>
    </div>

    <%- include('partials/footer') %>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"
    ></script>
</body>
</html>
