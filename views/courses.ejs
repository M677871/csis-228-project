<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Available Courses â€” LearnOnline</title>
  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7"
    crossorigin="anonymous"
  />
  <style>
    
    .course-card {
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      overflow: hidden;
    }
    .course-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }
    .course-img {
      object-fit: cover;
      width: 100%;
      height: 180px;
    }
    .rating i {
      color: #f4c150;
      font-size: 0.9rem;
    }
    @media (max-width: 576px) {
      .course-img { height: 140px; }
      .course-card .card-body { padding: 1rem; }
    }
  </style>
</head>
<body class="bg-light">
 
  <%- include('partials/header') %>
 

  <main class="container-fluid py-5">
    <div class="container">
      <h1 class="text-center text-primary mb-5">Available Courses</h1>

      <% if (categories && categories.length) { %>
        <% categories.forEach(group => { %>
          <!-- Category Section -->
          <section class="mb-5">
            <h3 class="mb-4 text-secondary border-bottom pb-2">
              <%= group.category.categoryName %>
            </h3>
            <div class="row g-4">
              <% group.courses.forEach(course => { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                  <div class="card course-card h-100">
                    <img
                      src="<%= course.image || '/images/default.png' %>"
                      alt="<%= course.course_name || 'Course Image' %>"
                      class="course-img"
                    />
                    <div class="card-body d-flex flex-column">
                      <h5 class="card-title fs-6 mb-2">
                        <%= course.course_name || course.courseName %>
                      </h5>
                      <p class="card-text text-secondary small flex-grow-1 mb-2">
                        <%= course.description.substring(0, 60) %>
                      </p>
                      <p class="mb-1 small text-muted">
                        by <%= course.instructorName || 'Instructor' %>
                      </p>
                      <div class="d-flex align-items-center mb-3">
                        <div class="rating">
                          <% for (let i = 0; i < 5; i++) { %>
                            <i class="bi bi-star-fill"></i>
                          <% } %>
                        </div>
                        <span class="small text-muted ms-2"></span>
                      </div>
                      <div class="mt-auto d-flex justify-content-between align-items-center">
                        <span class="badge bg-success py-2 px-3">Free</span>
                        <button class="btn btn-primary btn-sm">Enroll</button>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </section>
        <% }) %>
      <% } else { %>
        <p class="text-center text-muted">No courses available in any category.</p>
      <% } %>
    </div>
  </main>

  
  <%- include('partials/footer') %>

  
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"
  ></script>
</body>
</html>
